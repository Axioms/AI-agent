{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "g++ build active file",
      "command": "/usr/bin/g++",
      "args": ["-g", "${fileDirname}/main.cpp", 
              "${fileDirname}/agent.cpp", "${fileDirname}/card.cpp", 
              "${fileDirname}/deck.cpp", "${fileDirname}/game.cpp", "-o", "${fileDirname}/main"],
      "options": {
        "cwd": "/usr/bin"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}